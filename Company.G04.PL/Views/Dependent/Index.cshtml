@model IEnumerable<DependentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Dependents</h1>
<br />
<br />
<a asp-controller="Dependent" asp-action="Create" class="btn btn-primary">Create Dependent</a>
<br />
<br />
@if(Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.BirthDate)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.Parent)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var depe in Model)
            {
                <tr>
                    <td>@depe.Name</td>
                    <td>@depe.BirthDate</td>
                    <td>@depe.Age</td>
                    <td>@depe.Gender</td>
                    <td>@depe.Parent?.Name</td>
                    <partial name="PartialViews/_ButtonPartialView" model="@depe.Id.ToString()">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h5>
            There are No Dependent
        </h5>
    </div>
}
