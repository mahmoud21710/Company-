@model IEnumerable<DepartmentViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>
<br />
<br />
<a  asp-controller="Department" asp-action="Create" class="btn btn-primary">Create Department</a> 
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <partial name="PartialViews/_ButtonPartialView" model="@dept.Id.ToString()">

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>
            There are No Department 
        </h4>
    </div>
}
