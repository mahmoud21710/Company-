@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>
<br/>
<br/>
<form asp-action="Index">
    <div class="row m-5" >
        <div class="col-8">
            <input type="text" id="id" name="InputSearch" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" name="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />
@if(Model.Count()>0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Image)        </th>
                <th>@Html.DisplayNameFor(E => E.Name)        </th>
                <th>@Html.DisplayNameFor(E => E.Age)         </th>
                <th>@Html.DisplayNameFor(E => E.WorkFor)     </th>
                <th>@Html.DisplayNameFor(E => E.Address)     </th>
                <th>@Html.DisplayNameFor(E => E.Email)       </th>
                <th>@Html.DisplayNameFor(E => E.Salary)      </th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber) </th>
                <th>@Html.DisplayNameFor(E => E.IsActive)    </th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)  </th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var emp in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@emp.ImageName" width="75" class="rounded-circle" />
                    </td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.WorkFor?.Name</td>
                    <td>@emp.Address</td>
                    <td>@Html.DisplayFor(M => emp.Email)</td>
                    <td>@Html.DisplayFor(S => emp.Salary)</td>
                    <td>@emp.PhoneNumber</td>
                    <td>@Html.DisplayFor(I =>emp.IsActive)</td>
                    <td>@emp.HiringDate</td>
                    <partial name="PartialViews/_ButtonPartialView" model="@emp.Id.ToString()">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>
            There are No Employee
        </h4>
    </div>
}

